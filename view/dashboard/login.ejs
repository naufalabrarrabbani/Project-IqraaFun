<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Iqraa</title>
   <link rel="preconnect" href="https://fonts.googleapis.com" />
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
   <link rel="stylesheet" href="http://localhost:8000/assets/css/style.css" />
   <link
     href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
     rel="stylesheet"
   />
   <title>Iqraa</title>
</head>
  <body>
    <section class="bg-white min-h-max flex font-[poppins] mt-10 items-center justify-center">
      <!-- login container -->
      <div class="bg-white flex rounded-2xl shadow-lg max-w-3xl p-6 items-center">
        <!-- form -->
        <div class="md:w-1/2 lg:px-[20px] lg:mr-[12px] px-8 md:px-16">
          <div>
            <a href="/">
              <img src="http://localhost:8000/assets/img/logo-svg.svg" class="h-12 lg:h-16" alt="">
            </a>
          </div>
          <form action="/user-login" class="flex flex-col gap-4" method="post">
            <div class="relative">
              <input class="p-2 mt-8 rounded-xl border w-full" type="text" name="email" id="email" placeholder="Masukkan email kamu">
              <% if (error && error.email) {%>
                <p class="text-red-500 text-xs"><%= error.email %></p>
              <%}%>
            </div>
            <div class="relative">
              <input class="p-2 rounded-xl border w-full" type="text" name="password" id="password" placeholder="Masukkan Paswordnya">
              <% if (error && error.password) {%>
                <p class="text-red-500 text-xs"><%= error.password %></p>
              <%}%>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-eye absolute top-1/2 right-3 -translate-y-1/2" viewBox="0 0 16 16">
                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
              </svg>
            </div>
            <button class="bg-primary text-center rounded-xl text-white py-2 hover:scale-105 duration-300">Login</button>
                <% if (locals.messages && messages.error) {%>
                    <div id="alert" class="p-2 bg-red-500 my-2 text-white relative rounded-sm">
                        <p class="text-sm"><%= messages.error %></p>
                        <span class="absolute top-[2px] right-[8px] cursor-pointer text-lg" id="close"><i class="fa-solid fa-xmark"></i></span>
                    </div>
                <%}%>
          </form>

          <div class="mt-5 text-xs border-b border-[#002D74] py-4 text-[#002D74]">
            <a href="#">Forgot your password?</a>
          </div>
    
          <div class="mt-3 text-xs flex justify-between items-center text-[#002D74]">
            <p>Don't have an account?</p>
            <a href="/register" class="py-2 px-5 bg-white border rounded-xl hover:scale-110 duration-300">Register</a>
          </div>
        </div>
        <!-- image -->
        <div class="md:block hidden w-1/2">
          <img class="rounded-2xl" src="http://localhost:8000/assets/img/hero_login.png">
        </div>
      </div>
    </section>
    <script>
      const close = document.getElementById('close');
      const alert = document.getElementById('alert');
      if (close && alert) {
          close.addEventListener('click', () => {
              alert.classList.add('hidden')
          })
      }
  </script>
  </body>
</html>