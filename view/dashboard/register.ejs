<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="min-h-screen">
      <div class="grid lg:grid-cols-2">
        <!-- Form -->
        <div class="px-4 lg:px-[91px] pt-10">
          <!-- Logo Brand -->
          <a href="/" class="flex-shrink-0 inline-flex items-center">
            <img
              class="h-12 lg:h-16"
              src="/assets/img/logo-svg.svg"
              alt="Meet Doctor Logo"
            />
          </a>

          <div
            class="flex flex-col justify-center py-12 font-[poppins] h-full lg:min-h-screen"
          >
            <h2 class="text-[#1E2B4F] text-4xl font-semibold leading-normal">
              Ayo daftar sekarang<br />
              dan raih hadiahnya!
            </h2>
            <div class="mt-12">
              <!-- Form input -->
              <form
                action="/user-register"
                class="grid gap-6"
                method="post"
                enctype="multipart/form-data"
              >
                <div>
                  <label class="block" for="name"></label>
                  <input
                    type="text"
                    class="block w-full rounded-full py-4 text-[#1E2B4F] font-medium placeholder:text-[#AFAEC3] placeholder:font-normal px-7 border border-[#d4d4d4] focus:outline-none focus:border-[#0D63F3]"
                    placeholder="Nama Lengkap"
                    name="name"
                    id="name"
                  />
                  <% if (error && error.name) {%>
                  <p class="text-red-500"><%= error.name %></p>
                  <%}%>
                </div>

                <div>
                  <label class="block" for="age"></label>
                  <input
                    type="text"
                    class="block w-full rounded-full py-4 text-[#1E2B4F] font-medium placeholder:text-[#AFAEC3] placeholder:font-normal px-7 border border-[#d4d4d4] focus:outline-none focus:border-[#0D63F3]"
                    placeholder="Umur Kamu"
                    name="age"
                    id="age"
                  />
                  <% if (error && error.age) {%>
                  <p class="text-red-500"><%= error.age %></p>
                  <%}%>
                </div>

                <div>
                  <label class="block" for="email"></label>
                  <input
                    type="text"
                    class="block w-full rounded-full py-4 text-[#1E2B4F] font-medium placeholder:text-[#AFAEC3] placeholder:font-normal px-7 border border-[#d4d4d4] focus:outline-none focus:border-[#0D63F3]"
                    placeholder="Email Kamu"
                    name="email"
                    id="email"
                  />
                  <% if (error && error.email) {%>
                  <p class="text-red-500"><%= error.email %></p>
                  <%}%>
                </div>

                <div>
                  <label class="block" for="password"></label>
                  <input
                    type="text"
                    class="block w-full rounded-full py-4 text-[#1E2B4F] font-medium placeholder:text-[#AFAEC3] placeholder:font-normal px-7 border border-[#d4d4d4] focus:outline-none focus:border-[#0D63F3]"
                    placeholder="Password"
                    name="password"
                    id="password"
                  />
                  <% if (error && error.password) {%>
                  <p class="text-red-500"><%= error.password%></p>
                  <%}%>
                </div>

                <button
                  class="text-center text-white text-lg font-medium bg-[#0D63F3] px-10 py-4 rounded-full"
                >
                  Continue
                </button>
                <% if (locals.messages && messages.error) {%>
                <div
                  id="alert"
                  class="p-2 bg-red-500 my-2 text-white relative rounded-sm"
                >
                  <p class="text-sm"><%= messages.error %></p>
                  <span
                    class="absolute top-[2px] right-[8px] cursor-pointer text-lg"
                    id="close"
                    ><i class="fa-solid fa-xmark"></i
                  ></span>
                </div>
                <%}%>
                <div
                  class="text-center text-lg text-[#1E2B4F] font-medium bg-[#F2F6FE] px-10 py-4 rounded-full"
                >
                  <a href="/login"> Sign In </a>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- End Form -->
      

        <!-- Qoute -->
        <div class="md:block hidden bg-[#F9FBFC]">
          <div class="flex flex-col justify-center h-full px-24 pt-10 pb-20">
            <div class="relative">
              <div class="relative top-0 -left-5 mb-7">
                <img
                  src="/assets/img/sign-up-login.svg"
                  class=""
                  alt=""
                />
              </div>
            </div>
          </div>
        </div>
        <!-- End Qoute -->
      </div>
    </div>
    <script>
      const close = document.getElementById("close");
      const alert = document.getElementById("alert");
      if (close && alert) {
        close.addEventListener("click", () => {
          alert.classList.add("hidden");
        });
      }
    </script>
  </body>
</html>
